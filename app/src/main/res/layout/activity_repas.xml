<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    tools:context=".RepasActivity">

    <TextView
        android:id="@+id/txtJour"
        android:layout_width="226dp"
        android:layout_height="61dp"
        android:layout_marginTop="48dp"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="402dp"
        android:layout_height="601dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="9dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtJour">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="240dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            app:srcCompat="@drawable/dej" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="240dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:onClick="onDiner"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/diner" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="240dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:onClick="onSouper"
            app:srcCompat="@drawable/souper" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>